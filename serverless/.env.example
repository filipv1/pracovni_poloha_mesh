# Ergonomic Analyzer - Serverless Configuration
# Copy this file to .env and fill in your values

# Docker Hub credentials (for RunPod deployment)
DOCKER_USERNAME=your_dockerhub_username

# RunPod configuration
RUNPOD_API_KEY=your_runpod_api_key
# This will be set after deploying to RunPod
RUNPOD_ENDPOINT_ID=

# Cloudflare configuration
CF_SUBDOMAIN=your-subdomain  # Will create: your-subdomain.workers.dev

# Resend.com for email notifications (free tier: 100/day)
RESEND_API_KEY=re_xxxxxxxxxxxx

# Authentication
# Generate password hash: echo -n "your_password" | sha256sum
AUTH_PASSWORD_HASH=your_password_here_for_now
# Generate random secret: openssl rand -base64 32
JWT_SECRET=generate_random_secret_here

# GitHub username (for GitHub Pages deployment)
GITHUB_USERNAME=your_github_username

# Optional: SMPL-X model paths (if you have them)
# SMPLX_MODELS_PATH=/path/to/models/smplx