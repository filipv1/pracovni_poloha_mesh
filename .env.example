# Storage Provider Configuration
STORAGE_PROVIDER=r2  # Options: 'r2' or 's3'

# CloudFlare R2 Configuration (Recommended)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=ergonomic-analysis

# Alternative: AWS S3 Configuration
S3_ACCESS_KEY_ID=your_s3_access_key_id
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key
S3_BUCKET_NAME=ergonomic-analysis
S3_REGION=us-east-1

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT_ID=your_runpod_endpoint_id

# Processing Configuration
DEFAULT_QUALITY=medium  # Options: low, medium, high, ultra
MAX_VIDEO_SIZE=5368709120  # 5GB in bytes
JOB_STATUS_TTL=86400  # 24 hours in seconds
UPLOAD_URL_EXPIRY=3600  # 1 hour in seconds
DOWNLOAD_URL_EXPIRY=86400  # 24 hours in seconds